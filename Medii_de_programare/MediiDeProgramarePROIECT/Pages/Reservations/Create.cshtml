@page
@model MediiDeProgramarePROIECT.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Reservation.ClientID" class="control-label"></label>
                <select asp-for="Reservation.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="Reservation.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.TableID" class="control-label">Table</label>
                <select asp-for="Reservation.TableID" class="form-control" asp-items="ViewBag.TableID"></select>
                    <span asp-validation-for="Reservation.TableID" class="text-danger"></span>
                
            </div>
            
            <div class="form-group">
                <label asp-for="Reservation.ReservationDate" class="control-label"></label>
                <input asp-for="Reservation.ReservationDate" class="form-control" />
                <span asp-validation-for="Reservation.ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ReservationTime" class="control-label"></label>
                <input asp-for="Reservation.ReservationTime" class="form-control" type="time" />
                <span asp-validation-for="Reservation.ReservationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ReservationDuration" class="control-label"></label>
                <select asp-for="Reservation.ReservationDuration" class="form-control">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i ore</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
